@model CasinoMSR.Web.ViewModels.BaseViewModel
@{
    ViewBag.Title = "Favorite Games";
}

<!-- main-area -->
<main>
    <!-- breadcrumb-area -->
    <section class="breadcrumb-area breadcrumb-bg" data-background="/Images/slots-red.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2 class="title">Favorite <span>Games</span></h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">@Model.CurrentUser.UserName</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Favorite Games</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- movie-area -->
    <section class="movie-area movie-bg" data-background="/img/bg/movie_bg.jpg">
        <div class="container">
            <div class="row align-items-end mb-60">
                <div class="col-lg-6">
                    <div class="section-title text-center text-lg-left">
                        <span class="sub-title">ONLINE GAMES</span>
                        <h2 class="title">Your favorite games</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="movie-page-meta">
                        <div class="tr-movie-menu-active text-center">
                            <button class="active" data-filter="*">Slots</button>
                            <button class="" data-filter=".cat-one">Cards</button>
                            <button class="" data-filter=".cat-two">Other</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row tr-movie-active">
                @foreach (var item in Model.CurrentUser.FavoriteGames)
                {
                    <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-two">
                        <div class="movie-item movie-item-three mb-50">
                            <div class="movie-poster">
                                @if (string.IsNullOrEmpty(item.Game.Image.Path))
                                {
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@item.Game.Image.Image))">
                                }
                                else
                                {
                                    <img src="@item.Game.Image.Path">
                                }
                                <ul class="overlay-btn">
                                    <li><a asp-action="Details" asp-controller="Home" asp-route-id="@item.Game.Id" class="btn">Play Now</a></li>
                                    <li><a asp-controller="Favorite" asp-action="RemoveFromFavorite" asp-route-id="@item.Game.Id" class="btn">Remove from favorite</a></li>
                                </ul>
                            </div>
                            <div class="movie-content">
                                <div class="top">
                                    <h5 class="title"><a href="movie-details.html">@item.Game.Name</a></h5>
                                    <span class="date">@item.Game.Year</span>
                                </div>
                                <div class="bottom">
                                    <ul>
                                        <li><span class="quality">hd</span></li>
                                        <li>
                                            <span class="duration"><i class="far fa-clock"></i>@item.Game.Year</span>
                                            <span class="rating"><i class="fas fa-thumbs-up"></i>@item.Game.Recommendations</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="pagination-wrap mt-30">
                        <nav>
                            <ul>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- movie-area-end -->
</main>
<!-- main-area-end -->
