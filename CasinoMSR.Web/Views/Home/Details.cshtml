@using System.Net
@model CasinoMSR.Web.ViewModels.GameViewModel
@{
    ViewBag.Title = Model.CurrentGame.Name;
}


<!-- main-area -->
<main>

    <!-- movie-details-area -->
    <section class="movie-details-area" data-background="/img/bg/movie_details_bg.jpg">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="col-xl-3 col-lg-4">
                    <div class="movie-details-img">
                        @if (string.IsNullOrEmpty(Model.CurrentGame.Image.Path))
                        {
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.CurrentGame.Image.Image))">
                        }
                        else
                        {
                            <img src="@Model.CurrentGame.Image.Path">
                        }
                    </div>
                </div>
                <div class="col-xl-6 col-lg-8">
                    <div class="movie-details-content">
                        <h5>New game</h5>
                        <h2>@Model.CurrentGame.Name <span>@Model.CurrentGame.Genre</span></h2>
                        <div class="banner-meta">
                            <ul>
                                <li class="quality">
                                    <span>@Model.CurrentGame.Recommendations recommend</span>
                                    <span>@Model.CurrentGame.Genre</span>
                                </li>
                                <li class="release-time">
                                    <span><i class="far fa-calendar-alt"></i> @Model.CurrentGame.Year</span>
                                </li>
                            </ul>
                        </div>
                        <p>
                            @Model.CurrentGame.Info
                        </p>
                        <div class="movie-details-prime">
                            <ul>
                                <li class="share"><a href="#"><i class="fas fa-share-alt"></i> Share</a></li>
                                <li class="streaming">
                                    <h6>Online Game</h6>
                                    <span>Streaming Channels</span>
                                </li>
                                <li class="watch"><a class="btn" asp-controller="Game" asp-action="CreateGame" asp-route-id="@Model.CurrentGame.Id"><i class="fas fa-play"></i> Play Now</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- movie-details-area-end -->
</main>
<!-- main-area-end -->
