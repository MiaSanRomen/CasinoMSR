@model HistoryPedia.Models.SearchGame
@{
    ViewBag.Title = "Main";
}


<!-- main-area -->
<main>
<!-- banner-area -->
    <section class="banner-area banner-bg" data-background="Images/Main-Title.jpeg">
        <div class="container custom-container">
            <div class="row">
                <div class="col-xl-6 col-lg-8">
                    <div class="banner-content">
                        <h6 class="sub-title wow fadeInUp" data-wow-delay=".2s" data-wow-duration="1.8s">Casino MSR</h6>
                        <h2 class="title wow fadeInUp" data-wow-delay=".4s" data-wow-duration="1.8s">Unlimited <span>Games</span>, Prizes, & Bonuses.</h2>
                        <a class="banner-btn btn popup-video wow fadeInUp" data-wow-delay=".8s" data-wow-duration="1.8s" asp-controller="Home" asp-action="Games"><i class="fas fa-play"></i>Play Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- banner-area-end -->
    <!-- up-coming-movie-area -->
    <section class="ucm-area ucm-bg" data-background="img/bg/ucm_bg.jpg">
        <div class="ucm-bg-shape" data-background="img/bg/ucm_bg_shape.png"></div>
        <div class="container">
            <div class="row align-items-end mb-55">
                <div class="col-lg-6">
                    <div class="section-title text-center text-lg-left">
                        <span class="sub-title">ONLINE GAMES</span>
                        <h2 class="title">Try the best</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ucm-nav-wrap">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="tvShow-tab" data-toggle="tab" href="#tvShow" role="tab" aria-controls="tvShow" aria-selected="true">Slots</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="movies-tab" data-toggle="tab" href="#movies" role="tab" aria-controls="movies" aria-selected="false">Cards</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="anime-tab" data-toggle="tab" href="#anime" role="tab" aria-controls="anime" aria-selected="false">Other</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tvShow" role="tabpanel" aria-labelledby="tvShow-tab">
                    <div class="ucm-active owl-carousel">
                        @foreach (var item in Model.Games)
                        {
                            <div class="movie-item mb-50">
                                <div class="movie-poster">
                                    <a href="movie-details.html">
                                        @if (string.IsNullOrEmpty(item.Image.Path))
                                        {
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@item.Image.Image))">
                                        }
                                        else
                                        {
                                            <img src="@item.Image.Path">
                                        }
                                    </a>
                                </div>
                                <div class="movie-content">
                                    <div class="top">
                                        <h5 class="title"><a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">@item.Name</a></h5>
                                        <span class="date">@item.Year</span>
                                    </div>
                                    <div class="bottom">
                                        <ul>
                                            <li><span class="quality">@item.TypeName</span></li>
                                            <li>
                                                <span class="duration"><i class="far fa-clock"></i>@item.Year</span>
                                                <span class="rating"><i class="fas fa-thumbs-up"></i>@item.Recommendations</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="movies" role="tabpanel" aria-labelledby="movies-tab">
                    <div class="ucm-active owl-carousel">
                        @foreach (var item in Model.Games)
                        {
                            <div class="movie-item mb-50">
                                <div class="movie-poster">
                                    <a href="movie-details.html">
                                        @if (string.IsNullOrEmpty(item.Image.Path))
                                        {
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@item.Image.Image))">
                                        }
                                        else
                                        {
                                            <img src="@item.Image.Path">
                                        }
                                    </a>
                                </div>
                                <div class="movie-content">
                                    <div class="top">
                                        <h5 class="title"><a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">@item.Name</a></h5>
                                        <span class="date">@item.Year</span>
                                    </div>
                                    <div class="bottom">
                                        <ul>
                                            <li><span class="quality">@item.TypeName</span></li>
                                            <li>
                                                <span class="duration"><i class="far fa-clock"></i>@item.Year</span>
                                                <span class="rating"><i class="fas fa-thumbs-up"></i>@item.Recommendations</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="anime" role="tabpanel" aria-labelledby="anime-tab">
                    <div class="ucm-active owl-carousel">
                    @foreach (var item in Model.Games)
                    {
                        <div class="movie-item mb-50">
                            <div class="movie-poster">
                                <a href="movie-details.html">
                                    @if (string.IsNullOrEmpty(item.Image.Path))
                                    {
                                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@item.Image.Image))">
                                    }
                                    else
                                    {
                                        <img src="@item.Image.Path">
                                    }
                                </a>
                            </div>
                            <div class="movie-content">
                                <div class="top">
                                    <h5 class="title"><a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">@item.Name</a></h5>
                                    <span class="date">@item.Year</span>
                                </div>
                                <div class="bottom">
                                    <ul>
                                        <li><span class="quality">@item.TypeName</span></li>
                                        <li>
                                            <span class="duration"><i class="far fa-clock"></i>@item.Year</span>
                                            <span class="rating"><i class="fas fa-thumbs-up"></i>@item.Recommendations</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- up-coming-movie-area-end -->
    <!-- services-area -->
    <section class="services-area services-bg" data-background="img/bg/services_bg.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="services-img-wrap">
                        <img src="~/Images/documentation.jpg" alt="">
                        <a href="img/images/services_img.jpg" class="download-btn" download>Download <img src="fonts/download.svg" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="services-content-wrap">
                        <div class="section-title title-style-two mb-20">
                            <span class="sub-title">Our Services</span>
                            <h2 class="title">Play the best games.</h2>
                        </div>
                        <p>
                            Register and gain the best first-visit bonus. Actual popular games are waiting. Use all of yor luck and don't forget to call yor friends with you. Enjoy.
                        </p>
                        <div class="services-list">
                            <ul>
                                <li>
                                    <div class="icon">
                                        <i class="flaticon-television" asp-controller="Home" asp-action="Games"></i>
                                    </div>
                                    <div class="content">
                                        <h5>Start play games now.</h5>
                                        <p>Sign in and choose the game you want.</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon">
                                        <i class="flaticon-video-camera"></i>
                                    </div>
                                    <div class="content">
                                        <h5>See your profile.</h5>
                                        <p>Learn your games' statistics, check or top up your cash.</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- services-area-end -->
    <!-- live-area -->
    <section class="live-area live-bg fix" data-background="img/bg/live_bg.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-5 col-lg-6">
                    <div class="section-title title-style-two mb-25">
                        <span class="sub-title">ONLINE CASINO</span>
                        <h2 class="title">Live Casino games & huge possibilities for earning money</h2>
                    </div>
                    <div class="live-movie-content">
                        <p>
                            Casino MSR is huge platform with many modern games. We offer you great bonus to join you with great start. Join thousands of active players right now.
                        </p>
                        <div class="live-fact-wrap">
                            <div class="resolution">
                                <h2>100$ BONUS</h2>
                            </div>
                            <div class="active-customer">
                                <h4><span class="odometer" data-count="134"></span>K+</h4>
                                <p>Active Players</p>
                            </div>
                        </div>
                        <a asp-controller="Home" asp-action="Games" class="btn popup-video"><i class="fas fa-play"></i>Take bonus now</a>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-6">
                    <div class="live-movie-img wow fadeInRight" data-wow-delay=".2s" data-wow-duration="1.8s">
                        <img src="~/Images/blackjack-table.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- live-area-end -->
    <!-- tv-series-area -->
    <section class="tv-series-area tv-series-bg" data-background="img/bg/tv_series_bg.jpg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center mb-50">
                        <span class="sub-title">Best Players</span>
                        <h2 class="title">TOP-3 Winners right now</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
            @foreach (var item in Model.Users)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6">
                    <div class="movie-item mb-50">
                        <div class="movie-poster">
                            <a href="movie-details.html">
                                @if (string.IsNullOrEmpty(item.Image.Path))
                                {
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@item.Image.Image))">
                                }
                                else
                                {
                                    <img src="@item.Image.Path">
                                }
                            </a>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a href="movie-details.html">@item.UserName</a></h5>
                                <span class="date">@item.TotalWon</span>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li><span class="quality">@item.TotalWon</span></li>
                                    <li>
                                        <span class="duration"><i class="far fa-clock"></i>@item.TotalWon</span>
                                        <span class="rating"><i class="fas fa-thumbs-up"></i>@item.TotalWon</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </section>
    <!-- tv-series-area-end -->
</main>
<!-- main-area-end -->